<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/chat_fragment_bg"
    android:orientation="vertical">


    <EditText
        android:id="@+id/et_fragment_chat_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/shape_et_chat_input"
        android:drawableLeft="@drawable/chat_fragment_user"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/chat_fragment_user"
        android:hint="@string/et_hint_chat_user_name"
        android:padding="8dp"
        android:textColor="@color/et_chat_user_name"
        android:textColorHint="@color/et_hint_chat_user"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/et_fragment_chat_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginStart="60dp"
        android:background="@drawable/shape_et_chat_input"
        android:drawableLeft="@drawable/pwd"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/pwd"
        android:hint="@string/et_hint_chat_user_pwd"
        android:inputType="textPassword"
        android:maxLength="16"
        android:padding="8dp"
        android:textColor="@color/et_chat_user_name"
        android:textColorHint="@color/et_hint_chat_user"
        android:textSize="16sp" />

    <CheckBox
        android:checked="false"
        android:id="@+id/cb_fragment_chat_remember_pwd"
        android:layout_gravity="end"
        android:layout_marginRight="60dp"
        android:layout_marginEnd="60dp"
        android:textColor="@color/chat_fragment_checkbox_text"
        android:text="记住密码"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:enabled="false"
        android:gravity="center"
        android:id="@+id/tv_fragment_chat_goto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/selector_tv_chat_fragment_goto"
        android:padding="8dp"
        android:text="开始"
        android:textColor="@color/chat_fragment_goto"
        android:textSize="16sp"/>
</LinearLayout>
