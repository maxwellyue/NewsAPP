<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginEnd="100dp"
              android:layout_marginRight="100dp"
              android:background="@color/chat_content_bg"
              android:orientation="vertical">

    <TextView
        android:padding="10dp"
        android:text="矮个人更"
        android:textSize="@dimen/tv_chat_content"
        android:textColor="@color/tv_chat_content"
        android:id="@+id/tv_item_lv_fragment_chat_href_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:padding="10dp"
        android:text="http://www.google.com"
        android:textSize="@dimen/tv_chat_content"
        android:textColor="@color/tv_chat_content"
        android:id="@+id/tv_item_lv_fragment_chat_href_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>