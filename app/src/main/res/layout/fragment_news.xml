<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <com.astuetz.PagerSlidingTabStripExtends

        android:id="@+id/tab_fragment_news"
        xmlns:maxwell="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@color/tab_background"
        maxwell:pstsIndicatorColor="@color/tab_background"
        maxwell:pstsIndicatorHeight="2dp"
        maxwell:pstsSelectedTabTextColor="@color/tab_text_select"
        maxwell:pstsSelectedTabTextSize="14sp"
        maxwell:pstsShouldExpand="true"
        maxwell:pstsTabTextColor="@color/tab_text_normal"
        maxwell:pstsTabTextSize="14sp"
        maxwell:pstsUnderlineHeight="1dp"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_fragment_news"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>