<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="2dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">


        <TextView
            android:paddingTop="10dp"
            android:id="@+id/tv_item_lv_fragment_news_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我是新闻的标题"
            android:textColor="@color/tv_news_tilte_color"
            android:textSize="@dimen/news_title"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">
            <com.yue.maxwell.newsapp.views.RatioImageView

                android:id="@+id/iv_item_lv_fragment_news_pic1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:scaleType="fitXY"/>
            <com.yue.maxwell.newsapp.views.RatioImageView
                android:id="@+id/iv_item_lv_fragment_news_pic2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:scaleType="fitXY"/>
            <com.yue.maxwell.newsapp.views.RatioImageView
                android:id="@+id/iv_item_lv_fragment_news_pic3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:scaleType="fitXY"/>
        </LinearLayout>

        <RelativeLayout
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_item_lv_fragment_news_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="来源"
                android:textColor="@color/tv_news_source_color"
                android:textSize="@dimen/news_source"/>
            <TextView
                android:id="@+id/tv_item_lv_fragment_news_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="2016:10:01"
                android:textColor="@color/tv_news_time_color"
                android:textSize="@dimen/news_time"/>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>