<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="2dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/tv_item_lv_fragment_news_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/iv_item_lv_fragment_news_pic"
            android:layout_toStartOf="@+id/iv_item_lv_fragment_news_pic"
            android:paddingTop="10dp"
            android:text="我是新闻的标题"
            android:textColor="@color/tv_news_tilte_color"
            android:textSize="@dimen/news_title"/>

        <com.yue.maxwell.newsapp.views.RatioImageView
            android:id="@+id/iv_item_lv_fragment_news_pic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"/>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/iv_item_lv_fragment_news_pic"
            android:layout_toStartOf="@+id/iv_item_lv_fragment_news_pic"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">
            <TextView
                android:id="@+id/tv_item_lv_fragment_news_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="来源"
                android:textColor="@color/tv_news_source_color"
                android:textSize="@dimen/news_source"/>
            <TextView
                android:id="@+id/tv_item_lv_fragment_news_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="2016:10:01"
                android:textColor="@color/tv_news_time_color"
                android:textSize="@dimen/news_time"/>
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>