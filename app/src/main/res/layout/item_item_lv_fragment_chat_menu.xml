<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_item_item_lv_chat_menu_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/chat_menu_title"
        android:textSize="@dimen/chat_menu_title"/>
    <TextView
        android:id="@+id/tv_item_item_lv_chat_menu_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/chat_menu_info"
        android:textSize="@dimen/chat_menu_info"/>
</LinearLayout>